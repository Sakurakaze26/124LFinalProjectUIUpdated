<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="characterDisplayBorderPane" minHeight="600.0" minWidth="1290.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <HBox alignment="CENTER" prefHeight="600.0" prefWidth="350.0" spacing="15.0" BorderPane.alignment="CENTER" />
    </center>
   <left>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="600.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="characterDisplayLeftCharacter" fitHeight="346.0" fitWidth="254.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/placeHolderMainCharacter.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" minWidth="150.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="characterDisplayStatsContainer">
                     <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayLeftCharacterNameLabel" text="Name" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayLeftCharacterAttackLabel" text="Attack: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                              <Label id="characterDisplayLeftCharacterDefenceLabel" text="Defence: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayLeftCharacterHealthLabel" text="Health: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </left>
   <right>
      <HBox alignment="BOTTOM_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="characterDisplayRightCharacter" fitHeight="346.0" fitWidth="254.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/placeHolderMainCharacter.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" minWidth="150.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="characterDisplayStatsContainer">
                     <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayRightCharacterNameLabel" text="Name" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayRightCharacterAttackLabel" text="Attack: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                              <Label id="characterDisplayRightCharacterDefenceLabel" text="Defence: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label id="characterDisplayRightCharacterHealthLabel" text="Health: Value" textFill="WHITE">
                                 <font>
                                    <Font name="Corbel Light" size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </right>
</BorderPane>
